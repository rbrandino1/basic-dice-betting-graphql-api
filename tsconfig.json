{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@infra/*": ["src/infra/*"],
      "@users/*": ["src/users/*"],
      "@bets/*": ["src/bets/*"],
    },
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "incremental": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  }
}
